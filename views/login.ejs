<!DOCTYPE html>
<html>
<head>
  <title>Login</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body class="centered-container">
  <div class="card">
    <h2>Login</h2>
    <% if (typeof error !== 'undefined') { %><p class="error"><%= error %></p><% } %>
    <form method="post" action="/login">
      <input name="username" placeholder="Username" required class="input">
      <button type="submit" class="btn">Login</button>
    </form>
    <p class="info">Users: student1, student2, instructor1</p>
  </div>
</body>
</html>